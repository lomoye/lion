<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "classpath:mybatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="useGeneratedKeys" value="true"/>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <typeAliases>
        <typeAlias alias="User" type="com.lomoye.lion.core.domain.User"/>
    </typeAliases>

    <mappers>
        <mapper resource="com/lomoye/common/dao/Common.xml"/>
        <mapper resource="com/lomoye/lion/core/dao/UserMapper.xml"/>
    </mappers>

</configuration>